block content
    - var d = unescape(description) != 'undefined' ? unescape(description) : ''
    - var c = (crit == true) ? 'crit':'';
    - var f = (fail ==  true) ? 'fail':''; 
    - var n = (fail != true && crit != true) ? 'nor':'';
    - var g = (by.indexOf('(GM)') != -1) ? 'gm':''; 
    - var form = formula.replace(/\d+$/, "");
    - var sl = sublabel != 'undefined' ? sublabel :''
    - var name = sublabel+label
    - var r = (result.length <= 2) ? result : result.substring(0,2) + ' | ' + result.substring(2); 
    | <script>console.log(name); console.log("#{fail}");</script> 
    .container.chat 
        .row
            if sl != ''
                .col-12.name.attack #{label} (#{sublabel})
            else
                .col-12.name.attack #{label}
        .row
            .col-12
                .content.roll
                    .content.result.w-100 #{form} <span class='total #{c} #{f} #{n}'>#{r}</span>
                    if d != ''
                        .desc #{d}
                .avatar.attack